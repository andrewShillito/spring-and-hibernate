<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:integration="http://www.springframework.org/schema/integration"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context.xsd">
           
	<context:component-scan base-package="annotation.coach"/> <!-- automatically scan for coach package components -->
	<context:component-scan base-package="annotation.fortune"/><!-- automatically scan for fortune package components -->
	
	<context:property-placeholder location="classpath:sport.properties"/>
	
</beans>